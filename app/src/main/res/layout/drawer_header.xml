<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_header_height"
                android:background="@drawable/nav_header_bg"
                android:paddingBottom="@dimen/spacing_small_8"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingRight="@dimen/spacing_normal_16"
                android:paddingTop="@dimen/spacing_medial_24">

    <ImageView
        android:id="@+id/drawer_avatar_img"
        android:layout_width="@dimen/drawer_header_avatar_size"
        android:layout_height="@dimen/drawer_header_avatar_size"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:src="@drawable/avatar_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/drawer_user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/drawer_header_user_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal_14"/>

        <TextView
            android:id="@+id/drawer_user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/drawer_header_user_email"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal_14"/>

    </LinearLayout>

</RelativeLayout>